@page
@model IndexModel 
@{
    ViewData["Title"] = "Home page";
}

    <div class="text-center">

        <p>@Model.Description</p>
        @foreach (var item in Model.Room.Crossroads)
        {
            <a asp-page="/Room" asp-route-to="@item.NextRoomID" class="btn btn-primary">@item.Description</a>
        }
    </div>


